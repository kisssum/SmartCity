<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="10dp">

    <TextView
        android:id="@+id/lsleefUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="缴费单位"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lsleefAccountNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="缴费户号"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lsleefUnit" />

    <TextView
        android:id="@+id/lsleefAccountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="户名"
        app:layout_constraintBottom_toBottomOf="@+id/lsleefAccountNumber"
        app:layout_constraintStart_toEndOf="@+id/lsleefAccountNumber"
        app:layout_constraintTop_toTopOf="@+id/lsleefAccountNumber" />

    <TextView
        android:id="@+id/lsleefAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="住址信息"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lsleefAccountNumber" />

    <TextView
        android:id="@+id/lsleefAvailableBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前可余额"
        app:layout_constraintBottom_toBottomOf="@+id/lsleefAddress"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lsleefArrearsBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="当前欠费余额"
        app:layout_constraintBottom_toTopOf="@+id/lsleefAvailableBalance"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:layout_marginTop="8dp"
        android:background="#eee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lsleefAddress" />
</androidx.constraintlayout.widget.ConstraintLayout>